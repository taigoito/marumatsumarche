<section class="section section--account account account--reset js-animate-single">
  <div class="container container--tiny">
    <div
      class="section__title section__title--center section__title--desc js-animate-single"
      data-animation-displacement="5"
    >
      <h1 class="section__title-text h2">{{ 'customer.reset_password.title' | t }}</h1>
      <p class="section__title-desc js-animate-single" data-animation-displacement="0" data-animation-delay="0.1">
        {{ 'customer.reset_password.subtext' | t: email: email }}
      </p>
    </div>

    <div class="account__form">
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}

        <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
        <input
          type="password"
          value=""
          name="customer[password]"
          id="ResetPassword"
          class="{% if form.errors contains 'password' %} input--error{% endif %}"
        >

        <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input
          type="password"
          value=""
          name="customer[password_confirmation]"
          id="PasswordConfirmation"
          class="{% if form.errors contains 'password_confirmation' %} input--error{% endif %}"
        >

        <div class="account__form-buttons">
          <input
            type="submit"
            class="c-btn c-btn--primary account__form-submit"
            value="{{ 'customer.reset_password.submit' | t }}"
          >
        </div>
      {% endform %}
    </div>
  </div>
</section>
